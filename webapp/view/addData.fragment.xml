<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
>
    <Dialog title="Create Actor">
        <form:SimpleForm editable="true">
            <Label text="Name" />
            <Input id="name" />
            <Label text="Status" />
            <ComboBox id="status">
                <core:Item text="Active" />
                <core:Item text="Inactive" />
            </ComboBox>
        </form:SimpleForm>
        <buttons>
            <Button
                text="Save"
                icon="sap-icon://save"
                press="onAddData"
            />
            <Button
                text="Cancel"
                icon="sap-icon://decline"
                press="onCancelData"
            />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
